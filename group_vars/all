ansible_ssh_user: vagrant
ansible_ssh_private_key_file: ~/.vagrant.d/insecure_private_key

raspbian_version: 2017-04-10-raspbian-jessie-lite
zip_url: http://downloads.raspberrypi.org/raspbian_lite/images/raspbian_lite-2017-04-10/{{ raspbian_version }}.zip
zip_dest: imgs/{{ raspbian_version }}.zip
img: imgs/{{ raspbian_version }}.img

# mount both partitions to edit contents
img_parts:
  - dev: /dev/mapper/loop0p1
    path: /rasfat
    type: vfat
  - dev: /dev/mapper/loop0p2
    path: /rasext4
    type: ext4
